<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ShellNavigationSample.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ShellNavigationSample"
    Shell.FlyoutBehavior="Disabled"
    Title="ShellNavigationSample">

    <!-- registration of the routes for the main and second page -->
    <ShellContent Title="Main Page" Route="mainpage" ContentTemplate="{DataTemplate local:MainPage}" />
    <ShellContent Title="Second Page" Route="secondpage" ContentTemplate="{DataTemplate local:SecondPage}" />
    
</Shell>
